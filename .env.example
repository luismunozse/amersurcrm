# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Google Maps API (if using map features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Optional: WhatsApp Business API - Meta Direct (if using marketing features)
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_account_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# Twilio API (WhatsApp + SMS Marketing)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Optional: Google Drive API (if using document sync)
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=GOCSPX-your_google_client_secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/google/callback

# Facebook Lead Ads (Meta Business)
# Webhook para capturar leads automáticamente de formularios de Facebook
META_PAGE_ACCESS_TOKEN=your_page_access_token_here
META_LEAD_VERIFY_TOKEN=your_unique_verify_token_here
CRM_AUTOMATION_USER_ID=uuid_del_usuario_sistema_aqui

# WhatsApp Bot (whatsapp-web.js)
# API Key para autenticar requests del bot de WhatsApp Web
# Este valor debe ser el mismo que CRM_API_KEY en /whatsapp-bot/.env
WHATSAPP_BOT_API_KEY=your_whatsapp_bot_api_key_super_secret_here

# Sitio Web Público (Astro)
# API Key para autenticar requests desde el sitio web público
WEBSITE_API_KEY=your_website_api_key_here
# Dominio de la web para CORS (ej: https://www.amersur.com). Dejar vacío para permitir todos
WEBSITE_ORIGIN=
